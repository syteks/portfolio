{
  "compilerOptions": {
    "target": "ES2023",
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["resources/js/*"],
      "@components/*": ["resources/js/components/*"],
      "@composables/*": ["resources/js/composables/*"]
    }
  },
  "exclude": ["node_modules"],
  "vueCompilerOptions" : {
    "experimentalDisableTemplateSupport": true
  }
}
